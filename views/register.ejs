<% include ./partials/header %>

<div class="row">
	<h1 style="text-align: center">Sign up!</h1>
	<div style="width: 15%; margin: 25px auto;">
		<form id="form" action="/register" method="POST">
			<div class="form-group">
				<input class="form-control" id="username" type="text" name="username" placeholder="username">
			</div>
			<div class="form-group">
				<input class="form-control" id="password" type="password" name="password" placeholder="password">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="adminCode" placeholder="manager code">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" id="signup-btn">Sign up</button>
			</div>
		</form>
        <p>
			password should be at least 5 characters, a mixture of uppercase, lowercase letters and numbers.
		</p>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/register.js"></script>

